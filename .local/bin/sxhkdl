#!/bin/sh

case $WM in 
	bspwm)	sxhkd -c $XDG_CONFIG_HOME/sxhkd/sxhkdrc $XDG_CONFIG_HOME/sxhkd/bspwm & ;;
	dwm)		sxhkd -c $XDG_CONFIG_HOME/sxhkd/sxhkdrc $XDG_CONFIG_HOME/sxhkd/dwm & ;;
	i3)		sxhkd -c $XDG_CONFIG_HOME/sxhkd/sxhkdrc $XDG_CONFIG_HOME/sxhkd/i3 & ;;
	spectrwm)	sxhkd -c $XDG_CONFIG_HOME/sxhkd/sxhkdrc $XDG_CONFIG_HOME/sxhkd/spectrwm & ;;
	*)		sxhkd -c $XDG_CONFIG_HOME/sxhkd/sxhkdrc & ;;
esac
