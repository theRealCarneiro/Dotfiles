#!/bin/sh

options='Shutdown\nReboot\nEnd X Session'
escolha=$(
	printf "%b" "$options" |
	rofi -dmenu -mesg "Power Menu" -config $XDG_CONFIG_HOME/rofi/powermenu.rasi
)

case $escolha in
	   "Shutdown") shutdown now;;
	   "Reboot") reboot;;
	   "End X Session") killall Xorg;;
	   "Lock X Session") $HOME/.config/i3lock/lock.sh;;
	   "Reload BSPWM") bspc wm -r;;
esac
