#!/bin/sh
player=$(playerctl -l 2> /dev/null)
for i in $player; do
	case $i in
		spotify*)	
			icon=
			break;;
		chromium*) 
			icon=輸;; 
	esac
done
if [ ${#player} -ne 0 ]; then
	title=$(playerctl -p $i metadata --format "{{ title }}" 2>/dev/null)
else 
	exit
fi

if [ ${#title} -ne 0 ]; then
	if [ ${#title} -gt 30 ]; then
		cuttitle=$(echo $title  | cut -c-40)
		echo "$icon  " $cuttitle...
	else 
		echo "$icon  " $title
	fi
fi

