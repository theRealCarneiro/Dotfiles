# !/bin/bash
. $HOME/.cache/wal/colors.sh 
#export bg_alpha="#0f${background###}"
export bg_alpha="#bb${background###}"
#export bg_alpha="#${background###}"
killall polybar 
if type "xrandr"; then
  for m in $(xrandr --query | grep " connected" | cut -d" " -f1); do
    MONITOR=$m polybar --reload bar &
  done
else
  polybar --reload bar &
fi
