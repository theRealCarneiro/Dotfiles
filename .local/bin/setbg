	#source $HOME/.cache/wal/colors.sh 
	#oomox-cli $HOME/.cache/wal/colors-oomox
	#xrdb $XDG_CONFIG_HOME/X11/.Xresources # Source Xresources
	#qutebrowser :config-source :reload
	#spicetify apply
