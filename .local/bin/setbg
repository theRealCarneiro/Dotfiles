#!/bin/sh

wall="$XDG_CONFIG_HOME/wallpaper"
wall_home="$HOME/Bibliotecas/Imagens/Wallpapers"
wal_themes="$HOME/.config/wal/colorschemes"

rand(){
	wpp=$(find $wall_home -type f | shuf | head -n1)
	echo $wpp > $wall
}

theme(){
	[ "$2" = "light" ] && light="-l"
	theme=$1
	! [ -f "$wal_themes/$2/$theme.json" ] && exit 1
	wpp=$(grep wallpaper $wal_themes/$2/$theme.json | cut -c16- | sed 's/..$//')
	echo $wpp > $wall
	wal -e --theme $theme $light
	reloenv &
}

generate(){
	[ $# -eq 0 ] && exit
	wpp=$(realpath $1)
	! [ -f "$wpp" ] && exit 1
	echo $wpp > $wall
	wal -i -e "$wpp"
	reloenv &
}

[ $# -gt 0 ] && case $1 in
	"--theme-dark") theme $2 dark ;;
	"--theme-light") theme $2 light ;;
	"--generate") generate $2 ;;
	"--wallpaper") [ -f $(realpath $2) ] && realpath $2 > $wall || exit 1 ;;
	"--rand") rand ;;
esac

xwallpaper --zoom "$(cat $wall)" 
