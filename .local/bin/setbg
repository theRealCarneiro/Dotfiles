#!/bin/sh
wall=$XDG_CONFIG_HOME/wallpaper
if [ $1 = "rand" ]; then
	wp=$(find /home/gabriel/Bibliotecas/Imagens/Wallpapers -type f | shuf | head -n1)
else
	wp=$1
fi

if [ $# -ne 0 ]; then
	if [ "${wp##*$PWD*}" ]; then
		echo $PWD/$wp > $wall
	else
		echo $wp > $wall
	fi
fi

xwallpaper --zoom "$(cat $wall)" 

if [ "$2" = "--theme" ]; then
	wal --theme "$XDG_CONFIG_HOME/wal/colorschemes/$3"
	xrdb $XDG_CONFIG_HOME/X11/.Xresources # Source Xresources
fi
		

