#!/bin/sh
#imagem="$(cat $HOME/.cache/wal/wal)"
#imagem="$(cat $XDG_CONFIG_HOME/wallpaper)"
pgrep polybar && dwm-msg run_command togglebar
imagem="$(cat $XDG_CONFIG_HOME/lock_background)"
C=#${foreground#*#}22
D=#${foreground#*#}cc
T=#${foreground#*#}ff
W=#${color1#*#}bb
V=#${foreground#*#}bb
B='#00000000'  # blank
BG=#${background#*#}aa

gpg-connect-agent reloadagent /bye 

i3lock -C -i "$imagem" \
--radius=110	\
--insidevercolor=$C   \
--ringvercolor=$V     \
\
--insidewrongcolor=$C \
--ringwrongcolor=$W   \
\
--insidecolor=$BG      \
--ringcolor=$D        \
--linecolor=$B        \
--separatorcolor=$D   \
\
--verifcolor=$T        \
--wrongcolor=$T        \
--timecolor=$T        \
--datecolor=$T        \
--layoutcolor=$T      \
--keyhlcolor=$W       \
--bshlcolor=$W        \
\
--clock               \
--indicator           \
--time-font="SF Pro Display" \
--date-font="SF Pro Display" \
--timesize=40 \
--datesize=15 \
--timestr="%H:%M:%S"  \
--datestr="%A, %d %B de %Y" 

#wait $(pgrep i3lock) && kill -USR1 $(pgrep polyLaunch)
