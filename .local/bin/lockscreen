#!/bin/sh
imagem="$(cat $XDG_CONFIG_HOME/lock_background)"
C=#${foreground#*#}22
D=#${foreground#*#}cc
T=#${foreground#*#}ff
W=#${main#*#}bb
V=#${foreground#*#}bb
B='#00000000'  # blank
BG=#${background#*#}aa

gpg-connect-agent reloadagent /bye 

i3lock -C -i "$imagem" \
	--radius=100				\
	--insidever-color=$C		\
	--ringver-color=$V			\
							\
	--insidewrong-color=$C		\
	--ringwrong-color=$W		\
							\
	--inside-color=$BG			\
	--ring-color=$D			\
	--line-color=$B			\
	--separator-color=$D		\
							\
	--verif-color=$T			\
	--wrong-color=$T			\
	--time-color=$T			\
	--date-color=$T			\
	--layout-color=$T			\
	--keyhl-color=$W			\
	--bshl-color=$W			\
							\
	--clock					\
	--indicator				\
	--time-font="SF Pro Display"	\
	--date-font="SF Pro Display"	\
	--time-size=40				\
	--date-size=14				\
	--time-str="%H:%M:%S"		\
	--date-str="%A, %d %B de %Y" 
