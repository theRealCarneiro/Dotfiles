#!/bin/sh

pacmd load-module module-null-sink sink_name=Main
pacmd update-sink-proplist Main device.description=Main

pacmd load-module module-null-sink sink_name=Music
pacmd update-sink-proplist Music device.description=Music

pactl load-module module-loopback sink=alsa_output.usb-Behringer_BCD3000-00.analog-surround-40 source=Main.monitor
pactl load-module module-loopback sink=alsa_output.usb-Behringer_BCD3000-00.analog-surround-40 source=Music.monitor
