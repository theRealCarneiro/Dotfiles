# Global
set shell zsh
set hidden true
set tabstop 5
set sortby ext
set icons true
#set drawbox true
set previewer /home/gabriel/.config/lf/preview

# Custom Scripts
cmd mkdir ${{
	set -f 
	printf "Directory Name: "
	read ans
	mkdir "$ans"
}}

cmd aj %lf -remote "send $id cd '$(autojump $1)'"

cmd open ${{
	case $(file --mime-type "$f" -bL) in
		text/*|application/json) $EDITOR "$fx";;
		video/*) xdg-open "$f" & ;;
		image/*) sxiv "$f" $(dirname "$f") &;;
		application/pdf) zathura "$f" ;;
	     application/zip) unzip "$f" ;;
		application/gzip) tar -xzf "$f" ;;
		application/x-tar) tar -xf "$f" ;;
		application/x-bzip2) tar -xjf "$f" ;;
		application/x-7z-compressed) 7z e "$f" ;;
		application/x-dosexec) wine "$f" ;;
		*) for f in "$fx"; do xdg-open "$f"> /dev/null 2> /dev/null & done;;
	esac
}}

cmd unzip ${{
     atool -x "$f" -q
}}

cmd chmod ${{
     chmod +x "$f"
}}

cmd setBG ${{
     setbg "$f"
}}

cmd make ${{
	make
}}

cmd makeClean ${{
	make clean
}}

cmd gitadd ${{
	for f in $fs; do
		git add $f 
	done
}}

cmd gitcommit ${{
	set -f 
	printf "Commit message: "
	read ans
	git commit -m "ans"
}}

cmd gitpush ${{
	git push
}}

# Key Maps
map ga gitadd
map gc gitcommit
map gp gitpush
map a push :aj<space>
map m
map mk make
map mc makeClean
map x delete
map . set hidden!
map n mkdir
map zz unzip
map cc chmod
map sbg setBG
