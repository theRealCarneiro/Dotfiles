[module/updates-arch-combined]
type = custom/script
exec = arch_updates
format-prefix-font = 5
format-prefix = " "
#format-underline = ${colors.primary}
format-foreground = ${env:color1}
click-left = notify-send -i Pacman "Updates" "Pacman:\n$(checkupdates) \nAUR:\n $(yay -Qum)" &
click-right = alacritty -e sudo pacman -Syu &
interval = 600

[module/disk]
type = custom/script
exec = disk_usage
format-foreground = ${env:color2}
format-prefix = " "
format-prefix-font = 5
tail = true
click-left = kill -USR1 %pid%

[module/mem]
type = custom/script
exec = memory_usage 
#format-underline = ${colors.primary}
format-foreground = ${env:color3}
format-prefix = " "
format-prefix-font = 5
tail = true
click-left = kill -USR1 %pid%
click-right = notify-send "Quem ta comendo RAM: $(ps axch -o cmd:15,%mem --sort=-%mem | head)"

[module/temp]
