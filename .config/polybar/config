[module/dwm]
type = internal/dwm
format = <label-tags> <label-layout> <label-floating> <label-title>
; Path to dwm socket (default: /tmp/dwm.sock)
; socket-path = /tmp/dwm.sock

enable-tags-click = true
enable-tags-scroll = false
tags-scroll-empty = false
tags-scroll-reverse = false
tags-scroll-wrap = false
enable-layout-click = false
enable-layout-scroll = false
layout-scroll-wrap = false
layout-scroll-reverse = false

; If enable-layout-click = true, clicking the layout symbol will switch to this layout
secondary-layout-symbol = [M]

; Separator in between shown tags
; label-separator = |

; Title of currently focused window
; Available tokens:
;   %title%
;label-title = %title%
label-title = 
;label-title-font = 1
label-title-padding = 1
label-title-forefround = ${colors.forefround}
label-title-maxlen = 30

; Symbol of current layout
; Available tokens:
;   %symbol%
;label-layout = %symbol%
label-layout = %symbol%
label-layout-font = 0
label-layout-padding = 1
label-layout-foreground = ${colors.foreground}
label-layout-background = ${colors.background}

; Text to show when currently focused window is floating
label-floating = ""
label-floating-font = 5

; States: focused, unfocused, visible, urgent, empty
; Available tokens:
;   %name%

; focused = Selected tag on focused monitor
;label-focused = %name%
label-focused = 
label-focused-font = 3
label-focused-background = ${colors.background}
;label-focused-background = ${env:color1}
label-focused-foreground = ${env:color1}
;label-focused-foreground = ${env:background}
label-focused-underline= ${colors.primary}
label-focused-padding = 3

; unfocused = Unselected tag on unselected monitor
label-unfocused-font = 2
label-unfocused = %name%
label-unfocused-padding = 3

; visible = Unselected tag, but occupied tag on any monitor
label-visible-font = 2
;label-visible = %name%
label-visible = 
label-visible-background = ${colors.background}
;label-visible-foreground = ${colors.primary}
label-visible-foreground = ${env:color6}
label-visible-padding = 3

; urgent = Unselected tag with window that has urgency hint set
label-urgent-font = 2
;label-urgent = %name%
label-urgent = 
;label-urgent-background = ${colors.alert}
label-urgent-foreground = ${env:color5}
label-urgent-padding = 3

; empty = Unselected and unoccupied tag
; This can be set to an empty string to hide empty tags
label-empty-font = 2
;label-empty = %name%
label-empty = 
;label-empty-background = ${env:color2}
label-empty-foreground = ${env:color6}
label-empty-padding = 3

