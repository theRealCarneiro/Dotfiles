#
# wm independent hotkeys
#

# make sxhkd reload its configuration files:
super + r
	pkill -USR1 -x sxhkd
#super + Escape
	#pkill -USR1 -x sxhkd
	
super + alt + Return
	{setxkbmap us intl, setxkbmap br abnt2}


# close window
super + shift + q
	xdo kill

#super + {_,shift + }q
	#{case $WM in				\
		#dwm)	dwm-msg run_command killclient 1;;	\
		#*)	xdo close;; 		\
	#esac						\
	#, xdo kill}

#
# start programs
#

# start droidcam video service
super + v
	droidcamcli video

# start droidcam audio service
super + F6
	droidcamcli audio

super + g
	gamelaunch

# open mpv with webcam video
super + shift + v
	$TERMINAL -e mpv av://v4l2:/dev/video0 --profile=low-latency --untimed

# toggle scratchpad
super + shift + Return
	tdrop -w 1880 -h 1020 -y 45 -x 20 \
	alacritty --class scratchpad,scratchpad -t Scratchpad \
	--config-file $XDG_CONFIG_HOME/alacritty/scratchpad.yml 
	#&& {hidenodes, shownodes}
super + ctrl + Return
	tdrop -w 1880 -h 400 -y 660 -x 20 \
	alacritty --class scratchpad,scratchpad -t Scratchpad \
	--config-file $XDG_CONFIG_HOME/alacritty/scratchpad.yml

# terminal emulator
super + Return
	$TERMINAL

# browser
super + b 
	$BROWSER

# file managers 
super + e 
     $TERMINAL -e vifmrun
super + ctrl + e 
     pcmanfm

# rofi
super + shift + d
	rofi -show drun 
	
# dmenu
super + d 
	dmenu_run

# edit rcfiles 
super + c 
	rcfiles

# edit scripts
super + s
	editscripts

# picom
super + F10
	toggle picom 

# polybar
super + F9
	toggle polybar polyLaunch

super + ctrl + b
	toggle randbg


# print to clipboard
Print 
	maim -u -m 1 -f png | xclip -selection clipboard -t image/png -i \
	&& notify-send -i Camera "Screenshot" "Copiado para a área de transferencia"
super + Delete 
	maim -u -m 1 -f png | xclip -selection clipboard -t image/png -i \
	&& notify-send -i Camera "Screenshot" "Copiado para a área de transferencia"

# print selection to clipboard
super + shift + Delete 
	maim -s -u -m 1 -f png | xclip -selection clipboard -t image/png -i \
	&& notify-send -i Camera "Screenshot" "Copiado para a área de transferencia"

# i3lock
super + shift + x
	screenlock

super + shift + m
	mailsync & notify-send "Sincronizando email" "Procurando novos emails" -i Mail

super + ctrl + m
	$BROWSER gmail.com

super + shift + w
	kill -USR1 $(pgrep randbg)

#
## Audio 
#

super + p
	pavucontrol
	#$TERMINAL -e pulsemixer

super + shift + p 
	patchage

super + F12
	systemctl --user restart pulseaudio.service \
	&& notify-send "Restarted Pulseaudio" -i Audio 

super + shift + F12
	systemctl --user restart BCD.service \
	&& notify-send "Restarted BCD" -i CDJ

super + shift + F8
	{systemctl --user stop spotifyd.service \
	&& notify-send "Killed Spotifyd" -i Spotify,\
	systemctl --user start spotifyd.service \
	&& notify-send "Started Spotifyd" -i Spotify}

#super + c
	#$TERMINAL -e spt

XF86AudioPlay
	kill -USR2 $(pgrep playerctl_title)
	#play-pause

XF86AudioPrev
	playerctl --player=spotifyd previous

XF86AudioNext
	playerctl --player=spotifyd next


