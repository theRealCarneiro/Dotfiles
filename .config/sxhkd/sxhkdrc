#
# wm independent hotkeys
#

# kill window
super + shift + q
	xdo kill

#
# start programs
#

# terminal emulator
super + Return
	$TERMINAL

# browser
super + b 
	$BROWSER

# file managers 
super + {_, ctrl +} e 
	{$TERMINAL -e vifmrun, pcmanfm}
	
# dmenu
super + d 
	dmenu_run

# rofi
super + shift + d
	rofi -show drun 

# edit rcfiles 
super + c 
	rcfiles

# edit scripts
super + s
	editscripts

# game launcher
super + g
	gamelaunch

# dmenu calculator
super + ctrl + c
	dmenucalc

# toggle scratchpad
super + {ctrl, shift} + Return
	scratchpad {1882 1021 45 19, 1882 401 660 19}

# open calendar
super + alt + c
	$TERMINAL --class calendar,calendar -t Calcurse -e calcurse

# dmenu bluetooth prompt
super + shift + b
	bluecon

# i3lock
super + shift + x
	screenlock

# start droidcam video service
super + v
	droidcamcli video

# start droidcam audio service
super + F6
	droidcamcli audio

# open mpv with webcam video
super + shift + v
	$TERMINAL -e mpv av://v4l2:/dev/video0 --profile=low-latency --untimed

# open mail
{super + ctrl + m, XF86Mail}
	$BROWSER gmail.com

# sync mail
super + shift + m
	mailsync notify

# force new mail notify
super + ctrl + shift + m
	nmlist

#
# toggle programs
#

# picom
super + F10
	toggle picom 

# polybar
super + F9
	toggle polybar polyLaunch

# random bg daemon
super + ctrl + b
	toggle randbg

# reload graphical shit
super + ctrl + r
	reloenv

# make sxhkd reload its configuration files:
super + r
	pkill -USR1 -x sxhkd

# kill gpg
super + x
	gpg-connect-agent --no-autostart reloadagent /bye && \
	notify-send GPG "Restarted agent"

# print to clipboard
{Print, super + Delete }
	maim -u -m 1 -f png | xclip -selection clipboard -t image/png -i \
	&& notify-send -i Camera "Screenshot" "Copiado para a área de transferencia"

# print selection to clipboard
super + shift + Delete 
	maim -s -u -m 1 -f png | xclip -selection clipboard -t image/png -i \
	&& notify-send -i Camera "Screenshot" "Copiado para a área de transferencia"

# fetch updates and notify
super + u
	arch_updates notify

# force random bg daemon to change wpp
super + shift + w
	kill -USR1 $(pgrep randbg)

#
## Audio 
#

super + {_, shift +} p
	{pavucontrol, patchage}

#super + F12
	#sv restart $HOME/.config/runit/service/pulseaudio \
	#&& notify-send "Restarted Pulseaudio" -i Audio 

super + F12
	systemctl --user restart pulseaudio.service \
	&& notify-send "Restarted Pulseaudio" -i Audio 

super + shift + F12
	systemctl --user restart BCD.service \
	&& notify-send "Restarted BCD" -i CDJ

super + shift + F8
	{systemctl --user stop spotifyd.service \
	&& notify-send "Killed Spotifyd" -i Spotify,\
	systemctl --user start spotifyd.service \
	&& notify-send "Started Spotifyd" -i Spotify}

XF86AudioPlay
	kill -USR2 $(pgrep playerctl_title)

XF86AudioPrev
	playerctl --player=spotifyd previous

XF86AudioNext
	playerctl --player=spotifyd next

#
## power options
#

# power menu
super + F4
	powermenu

# shutdown 
super + alt + s
	prompt "Quer desligar o computador?" "poweroff"		

# reboot
super + alt + r
	prompt "Quer reiniciar o computador?" "reboot"

# end x session
super + shift + e
	prompt "Quer encerrar a X session?" "killall Xorg"

