#
# wm independent hotkeys
#

# make sxhkd reload its configuration files:
#super + Escape
	#pkill -USR1 -x sxhkd

super + r
	pkill -USR1 -x sxhkd

# close window
super + {_,shift + }q
	xdo {close, kill}

#
# start programs
#

# terminal emulator
super + Return
	$TERMINAL

# lf 
super + e 
     alacritty -e lf

# rofi
super + d 
	pyrofi
	
# dmenu
super + shift + d
	dmenuWal

# edit rcfiles 
super + c 
	rcfiles

# local bin
super + b
	binDmenu

# picom
super + F10
	toggle picom 

# polybar
super + F9
	toggle polybar polyLaunch

# print
super + Print
	scrot '%Y-%m-%d-%s_screenshot_$wx$h.jpg' -e 'mv $f ~/Bibliotecas/Imagens/Prints' && notify-send -i Camera "Screenshot" "Salvo em Imagens/Prints"

# print to clipboard
Print 
	scrot -q 100 ~/foo.png && xclip -selection clipboard -t image/png -i foo.png && rm ~/foo.png && notify-send -i Camera "Screenshot" "Salvo na área de transferência"

# i3lock
super + shift + x
	~/.config/i3lock/lock.sh


#
## Audio 
#

super + F12
	startpulse

super + shift + F12
	toggle BCD

super + shift + s 
	$TERMINAL -e spt

super + shift + F8
	toggle spotifyd 

XF86AudioPlay
#	playerctl --player=spotifyd play-pause

XF86AudioPrev
#	playerctl --player=spotifyd previous

#XF86AudioNext
#	playerctl --player=spotifyd next

#XF86AudioPlay
	dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotifyd /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause

# next song
#XF86AudioNext
	dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotifyd /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next

# previous
#XF86AudioPrev
	dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotifyd /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous

#
## power options
#

# power menu
super + F4
	powermenu

# quit bpswm
super + shift + e
	prompt "Quer encerrar a sessão?" "bspc quit"

# shutdown 
super + alt + s
	prompt "Quer desligar o computador?" "loginctl poweroff"		

# reboot
super + alt + r
	prompt "Quer reiniciar o computador?" "loginctl reboot"


#
# bspwm hotkeys
#

super + grave
	bspc desktop 10 -f
	#bspc desktop  -f

super + shift + grave
	bspc node -d focused:^10

super + F8
	bspc config top_padding {0, 22}

# gaps
super + F11
	bspc config window_gap {0, 15}

super + equal
	bspc config window_gap $(( $(bspc config window_gap) - 1 ))

super + minus
	bspc config window_gap $(( $(bspc config window_gap) + 1 ))

# restart bspwm
super + shift + r
	bspc wm -r

# close and kill
#super + {_,shift + }q
	#bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
super + g
	bspc node -s biggest

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
#super + {grave,Tab}
#	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
#super + {o,i}
#	bspc wm -h off; \
#	bspc node {older,newer} -f; \
#	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} focused:^{1-9,10}

#super + ctrl +{1-9,0}
#	bspc desktop -f HDMI-A-0:^{1-9,0}

# focus monitor
super + Tab 
	bspc monitor -f {DVI-D-0,HDMI-A-0}

# send to other monitor
super + shift + Tab
	bspc node -m {HDMI-A-0, DVI-D-0}

#
# preselect
#

# preselect the direction
super + alt + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + alt + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + alt + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + alt + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel


#
# move/resize
#

# expand a window by moving one of its side outward
super + ctrl + {h, j, k, l}
	bspc node -z {left -10 0, bottom 0 10, top 0 -10, right 10 0}

# contract a window by moving one of its side inward
super + ctrl + shift + {h, j, k, l}
	bspc node -z {left 10 0, bottom 0 -10, top 0 10, right -10 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0, 0 20, 0 -20, 20 0}

