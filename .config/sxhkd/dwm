# vim: filetype=sxhkd :
#
## Dwm
#

#super + q
	#dwmc killclient	      

# focus tag
super + shift + {j,k}
	dwm-msg run_command viewto{left,right}
	#dwmc focustag{left,right}

super + shift + b
	dwm-msg run_command 
	#dwmc togglebar

# focus
super + {j, k}
	dwm-msg run_command focusstack {1,-1}
	#dwmc {focusdown, focusup}

# master size
super + {h, l}
	dwm-msg run_command setmfact {-,_}0.05
	#dwmc {smaller, bigger}

#  split orientation
super + {_, shift +} i
	#dwmc {vertical, horizontal}


super + space
	dwm-msg run_command zoom
	#dwmc zoom		           

# layouts
super + {t, m, shift + n}
	dwm-msg run_command setlayoutsafe $(dwm-msg get_layouts | grep -A 1 {\"\","",""} | grep "addres" | awk '\{print $2\}')

super + shift + f
	dwm-msg run_command togglefloating

super + f
	dwm-msg run_command togglefullscr

#super + {t, shift + f, m, shift + n, shift + space}
	#dwm-msg run_command setlayoutsafe {0,1,2}
	#dwmc layout.{tiled, fullscreen, floating, monocle, null, toggle}

super + ctrl + {1-9}
	dwm-msg run_command toggleview {1-9}

super + shift + {h,l}
	dwm-msg run_command tagto{left && dwm-msg run_command viewtoleft,right && dwm-msg run_command viewtoright}
	
super + {_, shift +} 0
	#dwmc {view, tag}            

# focus monitors
super + tab
	#dwmc focusmon{+,-}	        

super + shift + {comma, period}
	#dwmc tagmon{-,+}		          

# gaps
super + {minus, equal, shift + equal}
	dwm-msg run_command setgaps {-5,5,0}
	#dwmc setgaps{-,+,0}		         

